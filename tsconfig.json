{
  "extends": "./.nuxt/tsconfig.json",
  "compilerOptions": {
    "types": ["vitest"], // Include Vitest's type definitions
    "strict": true,
    "module": "esnext",
    "target": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true
  },
  "include": ["app", "tests", "vitest.config.ts"],
  "exclude": ["node_modules"]
}
